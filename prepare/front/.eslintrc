{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "import",
    "react-hooks"
  ],
  "rules": {
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "react/prop-types": "off",

    "no-console": "off",
    "no-underscore-dangle":"off",
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-one-expression-per-line": "off",
    "object-curly-newline": "off",
    "linebreak-style": "off"
  },
  "markdownlint.config": {
    "MD033": {
      "allowed_elements": [
        "nobr",
        "sup",
        "br",
        "hr"
      ]
    },
    "MD036": false,
    "MD040": false,
    "MD046": false
  }
}